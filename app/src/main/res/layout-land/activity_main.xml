<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dev.edmt.androidcamerarecognitiontext.MainActivity">

  <SurfaceView
      android:id="@+id/surface_view"

      android:layout_width="300dp"
      android:layout_height="300dp"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/returnHome"
      android:layout_marginTop="15dp" />

  <TextView
      android:id="@+id/text_view2"
      android:layout_width="400dp"
      android:layout_height="43dp"
      android:layout_alignStart="@+id/Drug"
      android:layout_below="@+id/Drug"
      android:layout_marginTop="15dp"
      android:background="#dadada"
      android:gravity="center"
      android:text="@string/main_usage"
      android:textColor="@android:color/black"
      android:textSize="18sp" />

  <TextView
      android:id="@+id/text_view"
      android:layout_width="400dp"
      android:layout_height="42dp"
      android:layout_alignStart="@+id/text_view2"
      android:layout_below="@+id/text_view2"
      android:layout_marginTop="21dp"
      android:background="#dadada"
      android:gravity="center"
      android:text="@string/Output"
      android:textColor="@android:color/black"
      android:textSize="18sp" />

  <Button
      android:id="@+id/returnHome"
      android:layout_width="60dp"
      android:layout_height="40dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:background="#dadada"
      android:text="@string/back" />

  <TextView
      android:id="@+id/Drug"
      android:layout_width="400dp"
      android:layout_height="42dp"
      android:layout_alignTop="@+id/surface_view"
      android:layout_marginStart="25dp"
      android:layout_marginTop="19dp"
      android:layout_toEndOf="@+id/surface_view"
      android:background="#dadada"
      android:gravity="center"
      android:text="@string/Default_Drug"
      android:textColor="@android:color/black"
      android:textSize="20sp" />

  <Button
      android:id="@+id/Scanner"
      android:layout_width="100dp"
      android:layout_height="42dp"
      android:layout_alignStart="@+id/text_view"
      android:layout_below="@+id/text_view"
      android:layout_marginStart="65dp"
      android:layout_marginTop="19dp"
      android:background="#dadada"
      android:text="@string/scan"
      android:textAlignment="center"
      android:textAllCaps="true"
      android:textColor="@android:color/black"
      android:textSize="24sp" />

</RelativeLayout>
